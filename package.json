{
  "name": "gitnab",
  "version": "1.0.0",
  "description": "Nab just what you need from any GitHub repo - extract subfolders with ease",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "gitnab": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "node --import tsx --test src/*.test.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "github",
    "extract",
    "subfolder",
    "download",
    "cli",
    "tarball"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "tar": "^7.4.3"
  },
  "devDependencies": {
    "tsx": "^4.19.0",
    "@types/node": "^22.13.4",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3"
  }
}
